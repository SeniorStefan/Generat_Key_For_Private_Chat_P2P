<Window x:Class="Generat_Key.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Generat_Key"
        mc:Ignorable="d"
        Title="Key Generator" Height="100" Width="650">
    <Grid Background="#333333">
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Label Content="Пароль для закрытого ключа:" VerticalAlignment="Center"
                   FontSize="15" Foreground="White"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5,0" 
                         Style="{DynamicResource ResourceKey=RoundedPasswordBoxStyle}" PreviewTextInput="PasswordBox_PreviewTextInput"/>
            <Button Content="Сгенерировать ключи" Style="{DynamicResource ResourceKey=RoundedButtonStyle}"
                    Click="GenerateKeys_Click" Width="180"/>
        </StackPanel>
    </Grid>
</Window>
